@model List<AnnouncementWebsite.Models.Announcement>
@{ ViewBag.Title = "Announcements"; }

<div class="index-page">
    <h3 align="center" class="mt-3 mb-3">Announcements</h3>

    <ol>
            @foreach (var item in Model)
             {

                  <li class="pad"><a href="Home/Details/@item.Id">@item.Title</a>
                     <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold remove float-right" value="Remove"  data-id="@item.Id" />
                     <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold edit float-right" value="Edit" data-description ="@item.Description" data-id="@item.Id" data-title="@item.Title" />
                  </li>
             }
    </ol>

    <div>
        <div class="form-group float-right add-announcment">
            <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold mt-3" id="addannouncement" value="Add announcement" />
        </div>
    </div>
</div>
